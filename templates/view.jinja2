{% extends 'base.jinja2' %}

{% block subtitle %}View Donor Info{% endblock subtitle %}

{% block content %}
<p>Choose a donor to view.</p>
<form method="GET">
    {% if error %}<span class="error">{{ error }}<br><br>{% endif %}
    <label for="name-input">Donor: </label><input id="name-input" type="text" name="name"><br><br>
    <input type="submit" value="Get Donor Info">
</form>
{% if donations %}
<p>Here are the donations for {{ name }}:</p>
<ul>
    {% for donation in donations %}
        <li><b>{{ donation.donor.name }}</b>: {{ donation.value }}</li>
    {% endfor %}
</ul>
<p>{{ name }} has donated ${{ total }}</p>
{% endif %}
{% endblock content %}
